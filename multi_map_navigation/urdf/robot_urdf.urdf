<?xml version="1.0" ?>
<!-- =================================================================================== -->
<!-- |    Combined URDF for BMW_Car with ROS2 control and Gazebo plugins              | -->
<!-- =================================================================================== -->
<robot name="BMW_Car" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Materials -->
  <material name="blue">
    <color rgba="0 0.2 0.9 1"/>
  </material>
  <material name="gray">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  <material name="darkBlue">
    <color rgba="0 0 0.1 1"/>
  </material>

  <!-- Dummy Link -->
  <link name="dummy_link"/>

  <!-- Chassis -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.6 0.7 0.1"/>
      </geometry>
      <origin rpy="0 0 1.57" xyz="0 0 0"/>
      <material name="darkBlue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.7 0.1"/>
      </geometry>
      <origin rpy="0 0 1.57" xyz="0 0 0"/>
    </collision>
    <inertial>
      <origin rpy="0 0 1.57" xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.004166666666666666" ixy="0.0" ixz="0.0" iyy="0.0030833333333333333" iyz="0.0" izz="0.007083333333333332"/>
    </inertial>
  </link>
  <joint name="chassis_joint" type="fixed">
    <parent link="dummy_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0"/>
  </joint>
  <gazebo reference="chassis">
    <material>Gazebo/DarkMagentaTransparent</material>
  </gazebo>

  <!-- Front Left Wheel -->
  <link name="LF_wheel">
    <visual>
      <geometry>
        <cylinder length="0.07" radius="0.2"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005204166666666667" ixy="0.0" ixz="0.0" iyy="0.0005204166666666667" iyz="0.0" izz="0.0010000000000000002"/>
    </inertial>
  </link>
  <joint name="LF_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="LF_wheel"/>
    <origin rpy="0 1.57 -1.57" xyz="0.333 0.333 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  <gazebo reference="LF_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.2"/>
    <mu2 value="0.2"/>
  </gazebo>

  <!-- Front Right Wheel -->
  <link name="RF_wheel">
    <visual>
      <geometry>
        <cylinder length="0.07" radius="0.2"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005204166666666667" ixy="0.0" ixz="0.0" iyy="0.0005204166666666667" iyz="0.0" izz="0.0010000000000000002"/>
    </inertial>
  </link>
  <joint name="RF_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="RF_wheel"/>
    <origin rpy="0 1.57 -1.57" xyz="0.333 -0.333 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  <gazebo reference="RF_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.2"/>
    <mu2 value="0.2"/>
  </gazebo>

  <!-- Back Left Wheel -->
  <link name="LB_wheel">
    <visual>
      <geometry>
        <cylinder length="0.07" radius="0.2"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005204166666666667" ixy="0.0" ixz="0.0" iyy="0.0005204166666666667" iyz="0.0" izz="0.0010000000000000002"/>
    </inertial>
  </link>
  <joint name="LB_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="LB_wheel"/>
    <origin rpy="0 1.57 -1.57" xyz="-0.333 0.333 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  <gazebo reference="LB_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.2"/>
    <mu2 value="0.2"/>
  </gazebo>

  <!-- Back Right Wheel -->
  <link name="RB_wheel">
    <visual>
      <geometry>
        <cylinder length="0.07" radius="0.2"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005204166666666667" ixy="0.0" ixz="0.0" iyy="0.0005204166666666667" iyz="0.0" izz="0.0010000000000000002"/>
    </inertial>
  </link>
  <joint name="RB_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="RB_wheel"/>
    <origin rpy="0 1.57 -1.57" xyz="-0.333 -0.333 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  <gazebo reference="RB_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.2"/>
    <mu2 value="0.2"/>
  </gazebo>

  <!-- Lidar -->
  <link name="lidar">
    <visual>
      <geometry>
        <cylinder length="0.25" radius="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.16 0 0.1"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.25" radius="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.16 0 0.1"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="-0.16 0 0.1"/>
      <mass value="0.1"/>
      <inertia ixx="0.0010833333333333333" ixy="0.0" ixz="0.0" iyy="0.0010833333333333333" iyz="0.0" izz="0.001125"/>
    </inertial>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="chassis"/>
    <child link="lidar"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>
  <gazebo reference="lidar">
    <material>Gazebo/Indigo</material>
    <sensor name="lidar_sensor" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <min_angle>0.0</min_angle>
            <max_angle>6.28</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>1.0</min>
          <max>5.5</max>
        </range>
      </ray>
      <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <remap from="~/out" to="scan"/>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Camera -->
  <link name="camera">
    <visual>
      <geometry>
        <box size="0.15 0.15 0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.2 0 0.05"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.15 0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.2 0 0.05"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00012041666666666666" ixy="0.0" ixz="0.0" iyy="0.00012041666666666666" iyz="0.0" izz="0.0001875"/>
    </inertial>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="camera"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>
  <gazebo reference="camera">
    <material>Gazebo/Indigo</material>
    <sensor name="camera1" type="camera">
      <update_rate>10.0</update_rate>
      <camera name="camera1">
        <pose>1 0 0 0 0 0</pose>
        <horizontal_fov>1.4</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>8.0</far>
        </clip>
      </camera>
      <plugin filename="libgazebo_ros_camera.so" name="camera_controller">
        <frameName>camera</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ROS2 Control Hardware Interface -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="LF_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-100</param>
        <param name="max">100</param>
      </command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="RF_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-100</param>
        <param name="max">100</param>
      </command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="LB_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-100</param>
        <param name="max">100</param>
      </command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
    <joint name="RB_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-100</param>
        <param name="max">100</param>
      </command_interface>
      <state_interface name="velocity"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

  <!-- Gazebo ROS2 Control Plugin -->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>$(find robot_description)/config/my_controllers.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- Skid Steer Drive Plugin -->
  <gazebo>
    <plugin name="skid_steer_drive" filename="libgazebo_ros_diff_drive.so">
      <update_rate>500</update_rate>
      <num_wheel_pairs>2</num_wheel_pairs>
      <left_joint>LF_wheel_joint</left_joint>
      <right_joint>RF_wheel_joint</right_joint>
      <left_joint>LB_wheel_joint</left_joint>
      <right_joint>RB_wheel_joint</right_joint>
      <wheel_separation>0.6</wheel_separation>
      <wheel_diameter>0.4</wheel_diameter>
      <max_wheel_torque>200</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>chassis</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
    </plugin>
  </gazebo>
</robot>
